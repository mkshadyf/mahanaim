{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "strict": true,
     "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 